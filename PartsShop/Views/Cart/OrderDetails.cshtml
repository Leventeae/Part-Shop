@model Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<p><strong>Order Date:</strong> @Model.OrderDate.ToString("MM/dd/yyyy")</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

<h3>Order Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Part.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@Math.Round(item.Quantity * item.Price, 2)</td>
            </tr>
        }
    </tbody>
</table>