@model PartsShop.Models.Order

<h1>Order Confirmation</h1>

<p>Your order has been successfully submitted!</p>

<p>Order ID: @Model.Id</p>
<p>Shipping Address: @Model.ShippingAddress</p>
<p>Payment Method: @Model.PaymentMethod</p>

<h3>Order Summary</h3>
<table class="table">
    <thead>
        <tr>
            <th>Part Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Part.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@Math.Round(item.Quantity * item.Price, 2)</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: $@Math.Round(Model.TotalAmount, 2)</h4>