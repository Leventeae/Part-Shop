@model PartsShop.Models.Order

<h1>Order Confirmation</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<h2>Order Details</h2>
<p><strong>Order ID:</strong> @Model.Id</p>
<p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
<p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
<p><strong>Date of Order:</strong> @Model.OrderDate</p>

<h3>Order Summary</h3>
<table class="table">
    <thead>
        <tr>
            <th>Part Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Part.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@(item.Quantity * item.Price)</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: $@Math.Round(Model.TotalAmount, 2)</h4>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>