    .navbar .nav-link {
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .navbar .nav-link:hover {
        color: #f8f9fa;
        transform: translateX(5px);
    }

    footer .social-icon {
        transition: transform 0.3s ease, color 0.3s ease;
    }

    footer .social-icon:hover {
